<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.nine.crm.mapper.TenantMapper">
    <insert id="save" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO tenant(id, companyName, companyTel, companyNum, email, sysName, registerTime, state, address,
                           logo, meal_id, ispay)
        VALUES (#{companyName},
                #{companyTel},
                #{companyNum},
                #{email},
                #{sysName},
                #{registerTime},
                #{state},
                #{address},
                #{logo},
                #{meal_id},
                #{ispay})
    </insert>
    <update id="update">
        UPDATE tenant
        <set>
            <if test="companyName != null">
                companyName = #{companyName},
            </if>
            <if test="companyTel != null">
                companyTel = #{companyTel},
            </if>
            <if test="companyNum != null">
                companyNum = #{companyNum},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="sysName != null">
                sysName = #{sysName},
            </if>
            <if test="registerTime != null">
                registerTime = #{registerTime},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="logo != null">
                logo = #{logo},
            </if>
            <if test="meal_id != null">
                meal_id = #{meal_id},
            </if>
            <if test="ispay != null">
                ispay = #{ispay},
            </if>
        </set>
        WHERE id = #{id}
    </update>
    <delete id="delete">
        DELETE
        FROM tenant
        WHERE id = #{id}
    </delete>
    <delete id="batchDelete">
        DELETE FROM tenant WHERE id IN
        <foreach collection="list" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </delete>
    <select id="findAll" resultType="cn.nine.crm.domain.Tenant">
        SELECT id,
               companyName,
               companyTel,
               companyNum,
               email,
               sysName,
               registerTime,
               state,
               address,
               logo,
               meal_id,
               ispay
        FROM tenant
    </select>
    <select id="findOne" resultType="cn.nine.crm.domain.Tenant">
        SELECT id,
               companyName,
               companyTel,
               companyNum,
               email,
               sysName,
               registerTime,
               state,
               address,
               logo,
               meal_id,
               ispay
        FROM tenant
        WHERE id = #{id}
    </select>
    <sql id="base_where">
        <where>
            <if test="keyword != null">
                and name like CONCAT("%",#{keyword},"%")
            </if>
        </where>
    </sql>
    <!--分页查询-->
    <select id="selectForCount" resultType="long">
        SELECT count(id) FROM tenant
        <include refid="base_where"/>
    </select>
    <select id="selectForList" resultType="cn.nine.crm.domain.Tenant">
        SELECT id, companyName, companyTel, companyNum, email, sysName, registerTime, state, address, logo, meal_id,
        ispay
        FROM tenant
        <include refid="base_where"/>
        limit #{start},#{pageSize}
    </select>

</mapper>